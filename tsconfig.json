{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "sourceMap": false,
        "declaration": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES6",
        "module": "commonjs",
        "strict": true,
		"moduleResolution": "node",
        "lib": [
            "ES6"
        ]
    },
    "include": [
        "./src/**/*.ts"
	],
    "exclude": [
		"node_modules"
	]
}
